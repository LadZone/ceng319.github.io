            android:textSize="18sp"
            android:textColor="@android:color/holo_orange_light"
            android:background="@color/my_spinner_text_color" />
    </TableRow>


    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox android:id="@+id/checkbox_Bacon"
            android:text="@string/bacon"
            android:onClick="onCheckboxClicked"
            android:padding="3dip"
            android:layout_width="150dp"
            android:textSize="18sp"
            android:textColor="@android:color/holo_orange_light"
            android:background="@color/my_spinner_text_color" />
        <CheckBox android:id="@+id/checkbox_Ham"
            android:text="@string/ham"
            android:onClick="onCheckboxClicked"
            android:padding="3dip"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textColor="@android:color/holo_orange_light"
            android:background="@color/my_spinner_text_color" />
    </TableRow>
    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox android:id="@+id/checkbox_hot_sausage"
            android:text="@string/hot_sausage"
