<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_order_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="alay.lad.OrderConfirmationActivity"
    tools:showIn="@layout/activity_order_confirmation"
    android:background="@drawable/bk">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Billing Information"

        android:id="@+id/textView4"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp"
        android:background="@android:drawable/bottom_bar"
        android:gravity="center_vertical|center_horizontal" />
    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="Name          "
            android:textColor="@android:color/holo_red_light" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/first_names"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:id="@+id/last_name"
        android:textColor="@android:color/background_light" />
</TableRow>
    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:text="Address      "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_red_light" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/output_Address"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light" />
    </TableRow>
    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="City              "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/city"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/output_city"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/background_light" />
    </TableRow>

    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="State           "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Status"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/output_status"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/background_light" />
    </TableRow>


    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Zip               "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zip"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/output_zip"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/background_light" />
    </TableRow>





    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Country      "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Country"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/output_country"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/background_light" />
    </TableRow>



    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Phone         "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/holo_red_light" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/output_phone"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/background_light" />
    </TableRow>





        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="email         "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/holo_red_light" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/output_email"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/background_light" />
        </TableRow>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Card Information"

        android:id="@+id/card"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp"
        android:background="@android:drawable/bottom_bar"
        android:gravity="center_vertical|center_horizontal" />

    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_holder"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="Card Holder           "
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_first_names"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/background_light" />

    </TableRow>
    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_Type"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="Card Type              "
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_type_output"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/background_light" />

    </TableRow>
    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_number"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="Credit Card            "
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_number_output"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/background_light" />

    </TableRow>

    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exp_date"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="Expiration Date    "
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exp_date_output"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/background_light" />

    </TableRow>



<TableRow android:layout_width="match_parent"
android:layout_height="wrap_content">
<Button
    android:text="@string/back"
    android:layout_height="60dp"
    android:id="@+id/Back"
    android:background="@drawable/back"
    android:onClick="finalSelection"
    android:layout_width="150dp" />
<Button
    android:text="submit"
    android:layout_height="60dp"
    android:id="@+id/button4"
    android:background="@drawable/next"
    android:onClick="finalSelection"
    android:layout_width="150dp" />
</TableRow>
    </LinearLayout>
    </ScrollView>

</TableLayout>
