<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="alay.lad.MenuActivity"
    tools:showIn="@layout/activity_custom"
    android:background="@drawable/bk"
    android:orientation="vertical"
    android:weightSum="1"
    android:stretchColumns="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="21dp"
        android:entries="@array/SIZE"
        android:background="@drawable/dropbb"
        android:clipToPadding="false"
        android:gravity="center_vertical|center_horizontal|center" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:entries="@array/CHEESE"
        android:background="@drawable/dropbb" />


    <TableRow android:background="?attr/colorButtonNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/meat"

            android:id="@+id/textView4"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="25sp"
            />
    </TableRow>


    <TableRow android:background="@color/my_spinner_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox android:id="@+id/checkbox_Beef"
            android:text="@string/beef"
            android:onClick="onCheckboxClicked"
            android:padding="3dip"
            android:layout_width="150dp"
            android:textSize="18sp"
            android:textColor="@android:color/holo_orange_light"
            tools:background="@color/my_spinner_text_color" />
        <CheckBox android:id="@+id/checkbox_Chicken"
            android:text="@string/chicken"
            android:onClick="onCheckboxClicked"
            android:padding="3dip"
            android:layout_width="150dp"
            android:textSize="18sp"
            android:textColor="@android:color/holo_orange_light"
            tools:background="@color/my_spinner_text_color" />
    </TableRow>



    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox android:id="@+id/checkbox_Pepperoni"
            android:text="@string/pepperoni"
            android:onClick="onCheckboxClicked"
            android:padding="3dip"
            android:layout_width="150dp"
            android:textSize="18sp"
            android:textColor="@android:color/holo_orange_light"
            android:background="@color/my_spinner_text_color" />
