        <CheckBox android:id="@+id/checkbox_mild_sausage"
            android:text="@string/mild_sausage"
            android:onClick="onCheckboxClicked"
            android:padding="3dip"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:textColor="@android:color/holo_orange_light"
            android:background="@color/my_spinner_text_color" />
    </TableRow>








    <TableRow android:background="?attr/colorButtonNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/veggies"

            android:id="@+id/Veggies"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="25sp"
            />

